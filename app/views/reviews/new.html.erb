<h2>Add a Review </h2>



<% if @review.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@review.errors.count, "error") %>
      prohibited this post from being saved:
    </h2>
 
    <ul>
    <% @review.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>



<%= form_for [@stick, @review] do |f| %>
    <p>
    <%binding.pry%>
      <%= f.hidden_field :user_id, value: current_user.id %>
      <%= f.hidden_field :stick_id, value: @stick.id %>
      <%= f.label :review %><br>
      <%= f.text_area :review  %>
      
    </p>
    
  
      <%= f.submit %>
    
  <% end %>

  <%= link_to 'Back', sticks_path(@review.stick) %>
